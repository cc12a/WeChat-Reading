{
  "name": "wxRead",
  "displayName": "WeChat Reading",
  "description": "A plugin that allows WeChat reading in the VS Code editor",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.80.0"
  },
  "icon": "media/read-icon-light.png",
  "categories": [
    "Other"
  ], 
  "keywords": ["微信读书", "读书","微信","读书插件","爱读书","wxRead","wx","在线看书","看书"],
  "publisher": "mrcat",
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zbsguilai/WeChat-Reading.git"
  },
  "license": "ISC",
  "contributes": {
    "commands": [
      {
        "command": "wxRead.hideWebview", 
        "title": "hideWebview",
        "category": "wxRead"
      },
      {
        "command": "wxRead.showWebview",
        "title": "showWebview",
        "category": "wxRead"
      }
    ],
    "keybindings": [
      {
        "command": "wxRead.hideWebview", 
        "key": "ctrl+l",
        "mac": "cmd+l"
      },
      {
        "command": "wxRead.showWebview",
        "key": "ctrl+r",   
        "mac": "cmd+r"
      }
    ],
    "configuration": {
      "properties": {
        "wxRead.proxyPort": {
          "type": "number",
          "default": 9709,
          "description": "代理服务端口"
        },
        "wxRead.scale": {
          "type": "number",
          "default": 0.8,
          "description": "缩放比例"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wxRead-container",
          "title": "wxRead",
          "icon": "media/logo.png"
        }
      ]
    },
    "views": {
      "wxRead-container": [
        {
          "id": "wxRead-view",
          "type": "webview",
          "name": "wxRead"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "connect": "^3.7.0",
    "http-proxy-middleware": "^2.0.6"
  }
}